@model BanDoOnline.Models.KHACHHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .info-container {
        border: 1px solid #000;
        background-color: #ffc0cb;
        padding: 15px;
        margin-bottom: 20px;
    }

    th {
        text-align: right;
        width: 30%;
    }

    td {
        width: 70%;
    }

    .center-text {
        text-align: center;
    }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

        .btn-container .btn {
            margin: 5px;
        }
</style>

<div class="container info-container">
    <h2 class="center-text">Chỉnh sửa thông tin cá nhân</h2>

    @using (Html.BeginForm("Edit", "ThongTinCN", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.MaKH)

        <table class="table">
            <tr>
                <th>Họ Tên:</th>
                <td>@Html.EditorFor(model => model.HoTen)</td>
            </tr>
            <tr>
                <th>Tài Khoản:</th>
                <td>@Html.EditorFor(model => model.TaiKhoan, new { @readonly = "readonly" })</td>
            </tr>
            <tr>
                <th>Mật Khẩu:</th>
                <td>@Html.EditorFor(model => model.MatKhau)</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Html.EditorFor(model => model.Email)</td>
            </tr>
            <tr>
                <th>Địa Chỉ:</th>
                <td>@Html.EditorFor(model => model.DiaChi)</td>
            </tr>
            <tr>
                <th>Điện Thoại:</th>
                <td>@Html.EditorFor(model => model.DienThoai)</td>
            </tr>
            <tr>
                <th>Ngày Sinh:</th>
                <td>@Html.EditorFor(model => model.NgaySinh)</td>
            </tr>
        </table>

        <div class="btn-container">
            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            @Html.ActionLink("Hủy", "GioiThieu", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
