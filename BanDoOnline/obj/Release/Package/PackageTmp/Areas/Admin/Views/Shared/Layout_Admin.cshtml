<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/content/css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
            .navbar-brand-text {
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                max-width: 150px; /* Điều chỉnh độ rộng tối đa của phần hiển thị tên */
            }

            .dropdown-menu a {
                white-space: nowrap;
            }

            .nav-item.ml-auto {
                margin-left: auto;
            }

                .nav-item.ml-auto a {
                    color: #fff; /* Set the text color to white */
                    padding: 10px; /* Adjust padding for better spacing */
                    display: inline-block; /* Display as inline-block for proper alignment */
                }

                .nav-item.ml-auto a:hover {
                    background-color: #4e73df; /* Set the background color on hover */
                    color: #fff; /* Set the text color on hover */
                    text-decoration: none; /* Remove underline on hover */
                }

        .navbar-nav.ml-auto {
            margin-left: auto;
        }
    </style>
</head>

<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","HomeAdmin")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3 navbar-brand-text">
                    SB Admin <sup>2</sup>
                </div>
            </a>
            <hr class="sidebar-divider my-0">

            <li class="nav-item ml-auto">
                @if (Session["Taikhoan"] != null)
                {
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-expanded="false" aria-haspopup="true">
                        Admin: @Session["HoVaten"].ToString() <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                       
                        <li role="separator" class="divider"></li>
                        <li><a href="@Url.Action("Login", "HomeAdmin")"><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</a></li>
                    </ul>
                }
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","DanhMuc1")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Danh mục</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","KhachHang")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Khách hàng</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","DonHang")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Đơn hàng</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","SanPham")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Sản phẩm</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","ChiTietTonKho")">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Kho Hàng</span>
                </a>
            </li>

        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        <!-- Add any additional items in the right navbar if needed -->
                    </ul>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="~/Areas/content/vendor/jquery/jquery.min.js"></script>
        <script src="~/Areas/content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="~/Areas/content/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="~/Areas/content/js/sb-admin-2.min.js"></script>
        <!-- Page level plugins -->
        <script src="~/Areas/content/vendor/chart.js/Chart.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/Areas/content/js/demo/chart-area-demo.js"></script>
        <script src="~/Areas/content/js/demo/chart-pie-demo.js"></script>

        @RenderSection("script", required: false)
        @RenderSection("scripts", required: false)
    </div>
</body>

</html>
