@using BanDoOnline.Models
@{
    KHACHHANG kh = Session["TaiKhoan"] as KHACHHANG;
}

@if (kh == null) // Không có tài khoản đăng nhập
{
    <li>
        <a href="~/User/DangKy">
            <span class="glyphicon glyphicon-user"></span>
            Đăng ký
        </a>
    </li>
    <li>
        <a href="~/User/DangNhap?id=1">
            <span class="glyphicon glyphicon-log-in"></span> Đăng nhập
        </a>
    </li>
}
else
{
    <li class="dropdown" id="userDropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user"></span> Xin chào: @kh.HoTen
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="@Url.Action("DangXuat", "User")">
                    <span class="glyphicon glyphicon-log-out"></span> Đăng xuất
                </a>
            </li>
        </ul>
    </li>
}

